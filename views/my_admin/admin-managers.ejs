                <%if(managers[i].end_date == null){ %>
                    <button class="btn1" type="submit">Vacate </button> 
                    <input type="hidden" name="manager_id" id = "manager_id" value="<%= managers[i].manager_id %>">
                <% }%>
                    
                    
                </form></th>
            </tr><%
          
        
        } %>    
