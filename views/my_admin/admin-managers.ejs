    <form action="http://localhost:3000/admin-add-manager" method="get">
        <button class="btn" type="submit">Add a Manager</button>
    </form>

    <form action="http://localhost:3000/admin-reassign-manager" method="get">
        <button class="btn" type="submit">Reassign a Manager</button>
    </form>

    <table style="width:100%">

        <% for(var i=0; i<managers.length; i++){ 
          if (i==0){
          %>
            <tr>
                <th>manager_id</th>
                <th>name</th>
                <th>phone_no</th>
                <th>salary</th>
                <th>start_date</th>
