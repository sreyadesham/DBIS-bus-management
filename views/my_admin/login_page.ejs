<%- include('../includes/navigation.ejs') %>

<main>
    <form class="product-form" action="http://localhost:3000/admin/admin-login" method="POST">
        <div class="form-control">
            <label for="pass">E-Mail</label>
            <input type="email" name="name" id="name" value="<% if (editing) { %><%= inp[0].user %><% } %>">
        </div>
        <div class="form-control">
            <label for="pass">Password</label>
            <input type="password" name="pass" id="pass" value="<% if (editing) { %><%= inp[0].password %><% } %>">
        </div>
    

        <button class="btn" type="submit">Login</button>
    </form>
    <h> <%if(editing) {%>Wrong Credentials<%}else{ %><%} %> </h>
</main>
