<body>
<%- include('../includes/navigation.ejs') %>

<main>
	<form class="product-form" action="http://localhost:3000/manager/login" method="POST">
		<div class="form-control">
    			<label for="manager_phoneno">Phone Number: </label>
    			<input id="manager_phoneno" type="phone_number" name="manager_phoneno" value="<% if (editing) { %><%= inp[0].phoneno %><% } %>">
    	</div>

    		<div class="form-control">
    			<label for="manager_password">Password: </label>
    			<input id="manager_password" type="password" name="manager_password" value="<% if (editing) { %><%= inp[0].password %><% } %>">
    		</div>

	<button class="btn" type="submit">Login</button>
	</form>

	<h><center> <%if(editing) {%>Wrong Credentials<%}else{ %><%} %> </center> </h>
</main>
<%- include('../includes/end.ejs') %>
